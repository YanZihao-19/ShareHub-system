
.content {
	width: 100vw;
	height: 100vh;
}
.avatorWrapper {
	margin-top: 16px;
	height: 30vh;
	width: 100vw;
	display: flex;
	justify-content: center;
	align-items: flex-end;
}
.avator {
	width: 300rpx;
	height: 300rpx;
	overflow: hidden;
}
.avator .img {
	width: 100%
}
.lform {
	padding: 0 100rpx;
	margin-top: 40px;
}
.linput {
	/* flex: 1; */
	font-size: 14px;
	color: #666;
	border: 1px solid #e5e5e5;
	border-radius: 5px;
}
.loginBtn {
	width: 100%;
	height: 80rpx;
	background: #a3a3a3;
	border-radius: 50rpx;
	margin-top: 50px;
	display: flex;
	justify-content: center;
	align-items: center;
}
.custom-input {
	height: 80rpx;
	/* 设置输入框宽度为300像素，根据需要调整 */
	border: 1px solid #ccc;
}
.loginBtn .btnValue {
	color: white;
}
.forgotBtn {
	text-align: center;
	color: #8d8d8d;
	font-size: 15px;
	margin-top: 20px;
}

