<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yzh.mapper.NoticeMapper">

    <select id="selectAll" resultType="com.yzh.pojo.Notice">
        select
        *
        from notice
        <where>
            <if test="id != null">and id= #{id}</if>
            <if test="content != null">and content like concat('%', #{content}, '%')</if>
            <if test="status != null">and status= #{status}</if>
        </where>
        ORDER BY update_time DESC
    </select>

    <select id="selectById" resultType="com.yzh.pojo.Notice">
        select *
        from notice
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete
        from notice
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.yzh.pojo.Notice" useGeneratedKeys="true">
        insert into notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="content != null">content,</if>
            <if test="status != null">status,</if>
            <if test="url != null">url,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="content != null">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="url != null">#{url},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime}</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.yzh.pojo.Notice">
        update notice
        <set>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>