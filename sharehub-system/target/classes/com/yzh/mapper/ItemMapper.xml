<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yzh.mapper.ItemMapper">

    <select id="getItemList" resultType="com.yzh.pojo.Item">
        SELECT * FROM item
        <where>
            <if test="mode == 0 or mode == 1 or mode == 2">
                trade_mode = #{mode}
            </if>
            <if test="tag != 0">
                and tag = #{tag}
            </if>
            <if test="idSet != null and idSet.size() > 0">
                and id not in
                <foreach collection="idSet" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            and status = 0 and pageflag != 1
        </where>
        order by RAND() LIMIT 20
    </select>


    <select id="getUserItemList" resultType="com.yzh.pojo.Item">
        SELECT * FROM item
        <where>
            <if test="mode == 0 or mode == 1 or mode == 2">
                trade_mode = #{mode}
            </if>
            and owneruid = #{openId}
            and status = 0 and pageflag != 1
        </where>
        order by create_time
    </select>
</mapper>